<%= form_with model: @user, local: true do |f|%>
<%= render 'layouts/error_messages', model: f.object %>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><span class="indispensable">必須</span><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（6文字以上）" %><span class="indispensable">必須</span><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再入力" %><span class="indispensable">必須</span><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><span class="indispensable">必須</span><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール" %><span class="indispensable">必須</span><br />
    <%= f.text_area :profile, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :occupation, "前職" %><span class="indispensable">必須</span><br />
    <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {}, {class:"form__text"}) %>
  </div>

  <div class="field">
    <%= f.label :study, "学習進捗" %><span class="indispensable">必須</span><br />
    <%= f.collection_select(:study_id, Study.all, :id, :name, {}, {class:"form__text"}) %>
  </div>

  <div class="field">
    <%= f.label :age, "年齢" %><span class="indispensable">必須</span><br />
    <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"form__text"}) %>
  </div>

  <div class="field">
    <%= f.label :sns, "Twitter" %><span class="indispensable">必須</span><br />
    <%= f.text_area :sns, class: :form__text %>
  </div>

  <div class="actions">
    <%= f.submit "編集を保存", class: :form__btn  %>
  </div>
  <%=link_to 'もどる', root_path, class:"back-btn" %>
<% end %>