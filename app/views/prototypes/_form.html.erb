<%= form_with model: @prototype, local: true do |f|%>
<%= render 'layouts/error_messages', model: f.object %>
  
  <div class="field">
    <%= f.label :title, "アプリの名称" %><span class="indispensable">必須</span><br />

    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :text, "紹介文" %><span class="indispensable">必須</span><br />
    <%= f.text_area :text, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><span class="indispensable">必須</span><br />
    <%= f.text_area :concept, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :appli, "アプリのURL" %><span class="indispensable">必須</span><br />
    <%= f.text_area :appli, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :github, "GitHub" %><span class="indispensable">必須</span><br />
    <%= f.text_area :github, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :genre, "ジャンル" %><span class="indispensable">必須</span><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form__text"}) %>
  </div>

  <div class="field">
    <%= f.label :image, "アプリの画像" %><span class="indispensable">必須</span><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
  <%=link_to 'もどる', root_path, class:"back-btn" %>
<% end %>